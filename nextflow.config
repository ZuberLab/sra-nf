params {
    input = 'SraRunTable.txt'
    resultsDir = 'results'
    sample = false
}

process {
    cpus = 1
    maxForks = 4
    errorStrategy = 'retry'
    maxRetries = 1
    container = '/groups/zuber/zubarchive/GROUPS/Bioinfo/singularity/sra-nf.img'
    // container = 'zuberlab/sra-nf:latest'
}

timeline {
    enabled = true
}

singularity {
    enabled = true
}

profiles {

    standard {
        process.executor = 'local'
    }

    sge {
		process.executor = 'sge'
		process.penv = 'smp'
		process.queue = 'public.q'
		process.memory = '2GB'
    }
}
